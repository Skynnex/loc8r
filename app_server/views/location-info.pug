extends layout

include _includes/sharedHTMLfunctions

block content  
  .row.banner  
    .col-12
      h1= location.name
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            +outputRating(location.rating)
          p= location.adress
          .card.card-primary
            .card-block
              h2.card-title Horaires
              each horaire in location.openingTimes
                p.card-text
                  | #{horaire.days} : 
                  if horaire.closed
                    | ferm√©
                  else
                    | #{horaire.opening} - #{horaire.closing}
          .card-primary
            .card-block
              h2.card-title Services
              each facility in location.facilities
                span.badge.badge-warning
                  i.fa.fa-check= ' '+ facility
                |  &nbsp;
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              h2.card-title Carte
              img.img-fluid.rounded(src= `http://maps.googleapis.com/maps/api/staticmap?center=${location.coords.lat},${location.coords.lng}&zoom=17&size=400x350&sensor=false&markers=${location.coords.lat},${location.coords.lng}&scale=2&key=AIzaSyDfwx9PkextjggkMtWQVJUW2pW7pW5n5TE`)
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              a.btn.btn-primary.float-right(href='/location/review/new')
                Add review
              h2.card-title Customer reviews
      each review in location.reviews
        .row.review
          .col-12.no-gutters.review-header
            span.rating
              +outputRating(review.rating)
            span.reviewAuthor= review.author
            small.reviewTimestamp= review.date
        .col-12
          p= review.reviewText
    .col-12.col-lg-3
      p.lead= sidebar.context
      p= sidebar.callToAction


              
